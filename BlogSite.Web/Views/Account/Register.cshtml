@model BlogSite.Web.Models.RegisterViewModel

@{
    ViewBag.Title = "Register a New Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Account</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <h3>Personal Info</h3>
    @Html.EditorForModel()
    
    <p class="text-center">
        <input class="btn btn-inverse" type="submit" value="Save Account"/>
    </p>
}