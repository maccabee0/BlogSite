<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/bootstrap-responsive.css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar icon-arrow-right"></span>
                    <span class="icon-bar icon-arrow-left"></span>
                    <span class="icon-bar icon-arrow-right"></span>
                    <span class="icon-bar icon-arrow-left"></span>
                </button>
                <a class="brand" href="#">Trainee Blog Site</a>
                <div class="nav-collapse collapse" style="height: 0px;">
                    <ul class="nav">
                        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="dropdown open">
                            @{
                                Html.RenderPartial("Summary");
                            }
                        </li>

                        @if (HttpContext.Current.User.Identity.IsAuthenticated)
                        {
                            <li>
                                @Html.ActionLink("Post a new blog", "CreateNewBlog", "Blog")
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="main" class="container">
        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/Scripts/bootstrap.js")
        @Scripts.Render("~/Scripts/knockout-2.3.0.js")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
